import sys
import argparse
import re

from shared.git_ops import check_local_repo_state, create_and_push_tag


def validate_version(version):
    """Strictly validates the version against PEP 440."""
    pattern = r"^v?\d+\.\d+\.\d+(?:(?:a|b|rc|post|dev)\d+)?$"
    if "-" in version:
        print(
            f"❌ Error: Version '{version}' is invalid for Python (No hyphens allowed)."
        )
        sys.exit(1)
    if not re.match(pattern, version):
        print(f"❌ Error: Version '{version}' does not match PEP 440 patterns.")
        sys.exit(1)


def main():
    parser = argparse.ArgumentParser(description="Release Python Client.")
    parser.add_argument(
        "--version", required=True, help="The version to tag (e.g. v0.1.0)."
    )
    parser.add_argument(
        "--remote",
        required=True,
        help="The remote to push the tag to. Values can be upstream or origin.",
    )

    args = parser.parse_args()

    remote = args.remote
    version = args.version
    tag_name = f"k8s-agent-sandbox/{version}"

    # Validate Version
    validate_version(version)

    # Pre-flight Check
    check_local_repo_state(remote)

    # Idempotency: Check if tag already exists locally and push tag
    create_and_push_tag(tag_name, remote=remote)

    print("✅ Done! The 'pypi-publish' GitHub Action should now be running.")


if __name__ == "__main__":
    main()
